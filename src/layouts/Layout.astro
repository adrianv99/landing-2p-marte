---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import '../styles/index.css'

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" >
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Landing 2p Marte" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/landing-2p-marte/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-grey-800 dark:text-gray-300 dark:bg-gray-900">
    <Navigation />
    <slot />
    <Footer />
  </body>
</html>
