---
import Layout from "../layouts/Layout.astro";
import LoanForm from "../components/react/LoanForm";
---

<Layout title="SOLICITUD DE PRÉSTAMO">
  <div
    class="md:px-32 md:pt-10 p-5 bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-white"
  >
    <header class="mb-8">
      <h1 class="text-2xl font-bold">
        <span>Solicitud de préstamo </span>
      </h1>
      <p class="text-sm">Rellena el formulario para completar tu solicitud.</p>
    </header>
    <LoanForm client:visible />
  </div>
</Layout>
